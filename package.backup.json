{
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "latest"
  },
  "name": "audiojones",
  "scripts": {
    "dev:all": "turbo run dev --parallel --filter=./apps/web --filter=./apps/clients --filter=./apps/admin --filter=./apps/courses",
    "dev": "concurrently -n web,clients,admin,courses -c auto \"npm -w apps/web run dev\" \"npm -w apps/clients run dev\" \"npm -w apps/admin run dev\" \"npm -w apps/courses run dev\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format"
  },
  "packageManager": "npm@11.4.2",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md} ": "prettier --write"
  }
}
