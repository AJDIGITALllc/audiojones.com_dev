{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "latest"
  },
  "name": "audiojones",
  "scripts": {
    "dev:all": "turbo run dev --parallel --filter=./apps/web --filter=./apps/clients --filter=./apps/admin --filter=./apps/courses",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "echo \"No tests yet\" && exit 0",
    "prepare": "husky",
    "predev": "kill-port 3000 3001 3002 3003",
    "dev": "concurrently -n web,clients,admin,courses -c auto \"npm -w apps/web run dev\" \"npm -w apps/clients run dev\" \"npm -w apps/admin run dev\" \"npm -w apps/courses run dev\"",
    "env:pull": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\env-pull.ps1",
    "deploy:preview": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\deploy.ps1 preview",
    "deploy:prod": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\deploy.ps1 prod"
  },
  "packageManager": "npm@11.4.2",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  }
}
